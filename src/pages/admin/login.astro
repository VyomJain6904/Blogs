---
import Main from "../../layouts/MainLayout.astro";
import WriteupsConfig from "../../../geeklurk";

if (!WriteupsConfig.adminEnabled) {
    return Astro.redirect("/");
}

const sessionToken = Astro.cookies.get("admin_session")?.value;
if (sessionToken) {
    return Astro.redirect("/admin");
}
---

<Main title="Admin Login" subTitle="Secure Access">
    <div class="login-wrapper">
        <div class="login-container">
            <div class="login-header">
                <h1 class="login-title">üîê Admin Access</h1>
                <p class="login-subtitle">Authorized Personnel Only</p>
            </div>

            <form id="loginForm" class="login-form">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        placeholder="Enter username"
                        required
                        autocomplete="username"
                    />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Enter password"
                        required
                        autocomplete="current-password"
                    />
                </div>

                <button type="submit" class="login-btn" id="loginBtn">
                    <span>üöÄ Login</span>
                </button>

                <div id="errorMessage" class="error-message"></div>
                <div id="blockMessage" class="block-message"></div>
            </form>

            <div class="security-notice">
                <p>‚ö†Ô∏è This area is monitored and protected</p>
                <p class="notice-detail">
                    Unauthorized access attempts are logged and may result in IP
                    blocking
                </p>
            </div>
        </div>
    </div>
</Main>

<style>
    .login-wrapper {
        margin: 0 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
    }

    @media (min-width: 1024px) {
        .login-wrapper {
            margin: 0;
        }
    }

    .login-container {
        width: 100%;
        max-width: 448px;
        border-radius: 1rem;
        background-color: var(--card-color);
        padding: 32px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        border: 2px solid var(--primary-color);
    }

    .login-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .login-title {
        font-size: 1.875rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 8px;
        font-family: var(--brand-font);
    }

    .login-subtitle {
        color: var(--text-color-lighten);
        font-size: 0.875rem;
        font-family: var(--primary-font);
    }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .form-group label {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-color);
        font-family: var(--primary-font);
    }

    .form-group input {
        width: 100%;
        padding: 12px 16px;
        border-radius: 0.5rem;
        background-color: var(--background-color);
        border: 2px solid var(--card-color-lighten);
        color: var(--text-color);
        outline: none;
        transition: all 0.3s ease;
        font-family: var(--primary-font);
    }

    .form-group input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 10px 15px -3px rgba(189, 147, 249, 0.2);
    }

    .login-btn {
        width: 100%;
        padding: 16px 24px;
        border-radius: 0.5rem;
        background-color: var(--primary-color);
        color: white;
        font-weight: 700;
        font-size: 1.125rem;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-family: var(--primary-font);
    }

    .login-btn:hover {
        filter: brightness(1.1);
    }

    .login-btn:active {
        transform: scale(0.95);
    }

    .login-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .error-message {
        display: none;
        padding: 16px;
        border-radius: 0.5rem;
        background-color: rgba(239, 68, 68, 0.2);
        color: #f87171;
        text-align: center;
        font-size: 0.875rem;
        font-family: var(--primary-font);
    }

    .error-message.show {
        display: block;
    }

    .block-message {
        display: none;
        padding: 16px;
        border-radius: 0.5rem;
        background-color: rgba(249, 115, 22, 0.2);
        color: #fed7aa;
        text-align: center;
        font-size: 0.875rem;
        font-family: var(--primary-font);
    }

    .block-message.show {
        display: block;
    }

    .security-notice {
        margin-top: 32px;
        padding: 16px;
        border-radius: 0.5rem;
        background-color: var(--background-color);
        border-left: 4px solid var(--dracula-yellow);
        text-align: center;
    }

    .security-notice p {
        color: var(--dracula-yellow);
        font-weight: 600;
        font-size: 0.875rem;
        font-family: var(--primary-font);
    }

    .notice-detail {
        color: var(--text-color-lighten);
        font-size: 0.75rem;
        margin-top: 4px;
    }
</style>

<script>
    const form = document.getElementById("loginForm") as HTMLFormElement;
    const loginBtn = document.getElementById("loginBtn") as HTMLButtonElement;
    const errorMessage = document.getElementById(
        "errorMessage"
    ) as HTMLDivElement;
    const blockMessage = document.getElementById(
        "blockMessage"
    ) as HTMLDivElement;

    form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const username = formData.get("username") as string;
        const password = formData.get("password") as string;

        errorMessage.classList.remove("show");
        blockMessage.classList.remove("show");

        loginBtn.disabled = true;
        loginBtn.innerHTML = "<span>üîÑ Authenticating...</span>";

        try {
            const response = await fetch("/api/admin/login", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ username, password }),
            });

            const result = await response.json();

            if (response.ok) {
                window.location.href = "/admin";
            } else if (response.status === 403) {
                blockMessage.textContent = result.error;
                blockMessage.classList.add("show");
                loginBtn.disabled = false;
                loginBtn.innerHTML = "<span>üöÄ Login</span>";
            } else {
                errorMessage.textContent =
                    result.error || "Invalid credentials";
                errorMessage.classList.add("show");
                loginBtn.disabled = false;
                loginBtn.innerHTML = "<span>üöÄ Login</span>";
            }
        } catch (error) {
            errorMessage.textContent = "Network error. Please try again.";
            errorMessage.classList.add("show");
            loginBtn.disabled = false;
            loginBtn.innerHTML = "<span>üöÄ Login</span>";
        }
    });
</script>
