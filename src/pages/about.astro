---
import Main from "../layouts/MainLayout.astro";
import WriteupsConfig from "../../geeklurk";
import SocialIcon from "../components/widgets/SocialIcon.astro";
---

<Main title="About" subTitle="Security Engineer">
    <div class="article-wrapper">
        <div class="article">
            <div class="about-content">
                <h1>{WriteupsConfig.username}</h1>

                <p class="tagline">{WriteupsConfig.sign}</p>

                <h2>What You'll Find Here</h2>
                <ul>
                    <li>
                        <strong>HackTheBox Writeups</strong> - Detailed walkthroughs
                        of HTB machines
                    </li>
                    <li>
                        <strong>TryHackMe Solutions</strong> - Step-by-step guides
                        for THM rooms
                    </li>
                    <li>
                        <strong>VAPT Techniques</strong> - Web application and infrastructure
                        testing
                    </li>
                    <li>
                        <strong>Cloud Security</strong> - AWS and cloud infrastructure
                        assessments
                    </li>
                    <li>
                        <strong>Custom Tools</strong> - Security automation and reconnaissance
                        scripts
                    </li>
                </ul>
                <p>
                    Check out my work on {
                        WriteupsConfig.socialLinks.length > 0 && (
                            <div class="inline">
                                {WriteupsConfig.socialLinks.map((item) => (
                                    <SocialIcon
                                        name={item.icon}
                                        link={item.link}
                                    />
                                ))}
                            </div>
                        )
                    }<a href="https://github.com/VyomJain6904" target="github"
                    ></a>
                </p>

                <div class="disclaimer">
                    <h3>⚠️ Disclaimer</h3>
                    <p>
                        All writeups and techniques shared here are for
                        educational purposes only. Always obtain proper
                        authorization before testing any system. I do not
                        condone or encourage any illegal activities.
                    </p>
                </div>
            </div>
        </div>
    </div>
</Main>

<style>
    .article-wrapper {
        @apply mx-3 rounded-2xl bg-[var(--card-color)] px-5 py-6 lg:mx-0 lg:px-10 lg:py-9;
    }

    .article {
        @apply flex flex-col;
    }

    .about-content {
        @apply space-y-6;
    }

    .about-content h1 {
        @apply text-4xl font-bold text-[var(--primary-color)] mb-2;
    }

    .tagline {
        @apply text-xl text-[var(--text-color-lighten)] mb-8;
    }

    .about-content h2 {
        @apply text-2xl font-bold text-[var(--text-color)] mt-8 mb-4;
    }

    .about-content h3 {
        @apply text-xl font-bold text-[var(--text-color)] mt-4 mb-2;
    }

    .about-content p {
        @apply text-[var(--text-color)] leading-relaxed;
    }

    .about-content ul {
        @apply space-y-2 ml-6;
    }

    .about-content li {
        @apply text-[var(--text-color)];
    }

    .about-content a {
        @apply text-[var(--primary-color)];
    }

    .disclaimer {
        @apply mt-8 p-6 rounded-lg bg-[var(--background-color)] border-l-4 border-[var(--dracula-red)];
    }

    .disclaimer h3 {
        @apply text-[var(--dracula-red)] mb-2;
    }

    .disclaimer p {
        @apply text-[var(--text-color-lighten)];
    }
</style>
