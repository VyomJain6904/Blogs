---
import "../styles/animations.css";
import "../styles/scrollbar.css";
import "../styles/transitions.css";
import "../styles/searchbar.css";
import "overlayscrollbars/overlayscrollbars.css";
---

<style is:global>
    :root {
        /* Dracula Theme Colors */
        --dracula-bg: #282a36;
        --dracula-current: #44475a;
        --dracula-selection: #44475a;
        --dracula-foreground: #f8f8f2;
        --dracula-comment: #6272a4;
        --dracula-cyan: #8be9fd;
        --dracula-green: #50fa7b;
        --dracula-orange: #ffb86c;
        --dracula-pink: #ff79c6;
        --dracula-purple: #bd93f9;
        --dracula-red: #ff5555;
        --dracula-yellow: #f1fa8c;

        /* Application Colors */
        --hue: 265;

        --primary-color: var(--dracula-purple);
        --primary-color-lighten: rgba(189, 147, 249, 0.15);
        --primary-color-hover: rgba(189, 147, 249, 0.25);
        --primary-color-transparent: rgba(189, 147, 249, 0.15);
        --text-color: var(--dracula-foreground);
        --text-color-lighten: var(--dracula-comment);
        --card-color: var(--dracula-current);
        --card-color-lighten: #4a4d61;
        --card-color-transparent: rgba(68, 71, 90, 0.85);
        --background-color: var(--dracula-bg);

        --brand-font: "Raleway", "Noto Sans SC", sans-serif;
        --primary-font: "Noto Sans SC", sans-serif;
        --code-font: "JetBrains Mono", "Fira Code", monospace;

        --page-width-lg: 992px;
        --page-width-xl: 1264px;

        --banner-height: 55vh;
        --title-font: var(--brand-font);
        --title-color: var(--dracula-foreground);
        --subtitle-font: var(--brand-font);
        --subtitle-color: var(--dracula-cyan);

        --onload-animation-delay: 100ms;
        --onload-animation-interval: 100ms;
    }

    * {
        box-sizing: border-box;
    }

    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: var(--primary-font);
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* Typography */
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: var(--title-font);
        color: var(--text-color);
        font-weight: 700;
    }

    p {
        color: var(--text-color);
        margin: 1rem 0;
    }

    /* Progress bar */
    .swup-progress-bar {
        height: 5px;
        background-color: var(--primary-color);
    }

    /* Code blocks - Dracula themed */
    .astro-code,
    pre {
        background-color: var(--dracula-bg) !important;
        border: 1px solid var(--card-color-lighten) !important;
        border-radius: 0.75rem;
        overflow-x: auto;
        padding: 1rem;
    }

    code {
        font-family: var(--code-font);
    }

    /* Inline code */
    :not(pre) > code {
        background-color: rgba(68, 71, 90, 0.5) !important;
        color: var(--dracula-cyan) !important;
        padding: 2px 6px;
        border-radius: 4px;
    }

    /* Links - Dracula cyan */
    a {
        color: var(--dracula-cyan);
        transition: color 0.3s ease;
        text-decoration: none;
    }

    a:hover {
        color: var(--dracula-pink);
        text-decoration: underline;
    }

    /* Scrollbar styling */
    ::-webkit-scrollbar {
        width: 12px;
        height: 12px;
    }

    ::-webkit-scrollbar-track {
        background: var(--background-color);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--card-color-lighten);
        border-radius: 6px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: var(--primary-color);
    }

    /* Selection color */
    ::selection {
        background-color: var(--primary-color);
        color: white;
    }

    ::-moz-selection {
        background-color: var(--primary-color);
        color: white;
    }

    /* Form elements */
    input,
    textarea,
    select {
        background-color: var(--background-color);
        color: var(--text-color);
        border: 1px solid var(--card-color-lighten);
        border-radius: 0.5rem;
        padding: 0.75rem;
        font-family: var(--primary-font);
        transition: border-color 0.3s ease;
    }

    input:focus,
    textarea:focus,
    select:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(189, 147, 249, 0.1);
    }

    /* Button styling */
    button {
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: var(--primary-font);
    }

    button:active {
        transform: scale(0.98);
    }

    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 1rem 0;
    }

    th,
    td {
        padding: 0.75rem;
        text-align: left;
        border-bottom: 1px solid var(--card-color-lighten);
    }

    th {
        background-color: var(--card-color);
        font-weight: 700;
        color: var(--text-color);
    }

    tr:hover {
        background-color: rgba(68, 71, 90, 0.5);
    }

    /* Utility classes */
    .container {
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    @media (min-width: 640px) {
        .container {
            max-width: 640px;
        }
    }

    @media (min-width: 768px) {
        .container {
            max-width: 768px;
        }
    }

    @media (min-width: 1024px) {
        .container {
            max-width: var(--page-width-lg);
        }
    }

    @media (min-width: 1280px) {
        .container {
            max-width: var(--page-width-xl);
        }
    }
</style>
